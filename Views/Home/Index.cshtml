@{
    ViewBag.Title = "Strona główna";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-6">
            <h2>@ViewBag.NewBandHeader</h2>
            <p class="lead">
                Typ: @ViewBag.NewBandType <br />
                Debiut: @ViewBag.NewBandDate <br />
                Ilość @ViewBag.NewBandSex: @ViewBag.NewBandMembers <br />
            </p>
            <p>
                <a href="http://asp.net" class="btn btn-primary btn-lg">
                    Sprawdź &raquo;
                </a>
            </p>
        </div>
        <img src=@ViewBag.NewBandImg class="img-rounded2" alt="Obrazek" />
    </div>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-6">
            <h2>@ViewBag.NewSongArtist - @ViewBag.NewSongName</h2>
            <p class="lead">
                @ViewBag.NewSongDate - nowa piosenka @ViewBag.NewSongArtist
            </p>
            <p>
                <a href="http://asp.net" class="btn btn-primary btn-lg">
                    Sprawdź &raquo;
                </a>
            </p>
        </div>
        <img src=@ViewBag.NewSongImg class="img-rounded2" alt="Obrazek" />
    </div>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-6">
            <h2>@ViewBag.NewArtistHeader</h2>
            <p class="lead">
                @ViewBag.NewArtistType <br />
                Prawdziwe imie: @ViewBag.NewArtistName <br />
                Data ur.: @ViewBag.NewArtistDate (@ViewBag.NewArtistAge lat)<br />
            </p>
            <p>
                <a href="http://asp.net" class="btn btn-primary btn-lg">
                    Sprawdź &raquo;
                </a>
            </p>
        </div>
        <img src=@ViewBag.NewArtistImg class="img-rounded2" alt="Obrazek" />
    </div>
</div>